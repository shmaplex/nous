{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "composite": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/p2p",
    "rootDir": "./src/p2p",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false
  },
  "include": ["./src/p2p/**/*.ts", "./src/types/**/*.d.ts"]
}
