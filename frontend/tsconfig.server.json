{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "./dist/p2p",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/src/*"],
      "@/types": ["src/types/index.ts"],
      "@/types/*": ["src/types/*"],
      "@/constants/*": ["src/constants/*"]
    }
  },
  "include": ["server/src/**/*", "src/types/**/*", "src/constants/**/*"]
}
